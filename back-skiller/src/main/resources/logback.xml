<?xml version="1.0" encoding="UTF-8"?>
<configuration>

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<Pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n
			</Pattern>
		</layout>
	</appender>

	<root level="INFO">
		<appender-ref ref="STDOUT" />
	</root>

	<logger name="fr.skiller.controler.StaffController" additivity="false">
		<level value="DEBUG" />
		<appender-ref ref="STDOUT" />
	</logger>

	<logger name="fr.skiller.controler.TestController" additivity="false">
		<level value="DEBUG" />
		<appender-ref ref="STDOUT" />
	</logger>


	<logger name="fr.skiller.bean.impl.StaffHandlerImpl" additivity="false">
		<level value="WARN" />
		<appender-ref ref="STDOUT" />
	</logger>

	<logger name="fr.skiller.source.scanner.git" additivity="false">
		<level value="WARN" />
		<appender-ref ref="STDOUT" />
	</logger>

</configuration>